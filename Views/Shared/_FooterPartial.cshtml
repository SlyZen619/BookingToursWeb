@* Đây là "Layout cho Footer" theo yêu cầu của bạn *@

<footer class="footer-custom border-top text-muted">
    <div class="container d-flex justify-content-between align-items-center flex-wrap">
        <div class="footer-left-content py-2">
            &copy; @DateTime.Now.Year - BookingToursWeb. All rights reserved.
        </div>
        <div class="footer-right-links py-2">
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none mx-2">Privacy Policy</a>
            <a href="#" class="text-decoration-none mx-2">Terms of Service</a>
            <a href="#" class="text-decoration-none mx-2">Contact Us</a>
        </div>
    </div>
</footer>

<style>
    /* CSS cho footer - ĐÃ THÊM THUỘC TÍNH ĐỂ LÀM NÓ STICKY Ở ĐÁY */
    .footer-custom {
        background-color: #F2CC63; /* Màu nền tối hơn */
        color: #f8f9fa; /* Màu chữ sáng */
        padding: 20px 0; /* Tăng padding */
        font-size: 0.95em;
        width: 100%; /* Đảm bảo footer chiếm toàn bộ chiều rộng */
        position: fixed; /* Làm cho footer luôn cố định tại một vị trí trên viewport */
        bottom: 0; /* Cố định ở dưới cùng của viewport */
        left: 0; /* Cố định từ mép trái viewport */
        z-index: 1030; /* Đảm bảo nó nằm trên các nội dung khác nếu cần, cùng z-index với navbar Bootstrap */
    }

        .footer-custom a {
            color: #007bff; /* Màu liên kết xanh */
            transition: color 0.3s ease;
        }

            .footer-custom a:hover {
                color: #ffffff; /* Màu trắng khi hover */
                text-decoration: underline !important;
            }

        .footer-custom .container {
            max-width: 1200px; /* Giới hạn chiều rộng container */
        }

    /* MEDIA QUERY VỚI @@media ĐÃ ĐƯỢC BẠN TÌM RA VÀ NÓ HOẠT ĐỘNG */
    @@media (max-width: 767.98px) {
        .footer-custom .container {
            flex-direction: column;
            text-align: center;
        }

        .footer-right-links {
            margin-top: 10px;
        }

            .footer-right-links a {
                display: block; /* Mỗi liên kết một dòng */
                margin: 5px 0 !important;
            }
    }
</style>