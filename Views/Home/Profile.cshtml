@model BookingToursWeb.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Profile của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Profile của tôi</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
                <p><strong>Tên tài khoản:</strong> @Model.User.Username</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
                @* Thêm các thông tin cá nhân khác của người dùng nếu có trong Model.User *@
                @* Ví dụ: <p><strong>Họ tên:</strong> @Model.User.FullName</p> *@
                @* <p><strong>Số điện thoại:</strong> @Model.User.PhoneNumber</p> *@
                <a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary btn-sm mt-2">Chỉnh sửa thông tin</a>
                @* Liên kết này sẽ được phát triển sau để chỉnh sửa profile *@
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Lịch đã đặt của tôi</h5>
            </div>
            <div class="card-body">
                @if (!Model.Bookings.Any())
                {
                    <div class="alert alert-info" role="alert">
                        Bạn chưa có lịch đặt tour nào. Hãy <a asp-controller="Home" asp-action="Booking">đặt lịch ngay</a>!
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-primary">
                                <tr>
                                    <th>Địa điểm</th>
                                    <th>Ngày hẹn</th>
                                    <th>Số lượng khách</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Ghi chú</th>
                                    <th>Đặt lúc</th>
                                    <th>Cập nhật lúc</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Bookings)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Location != null)
                                            {
                                                @item.Location.Name
                                            }
                                            else
                                            {
                                                <span>Không rõ</span>
                                            }
                                        </td>
                                        <td>
                                            @item.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td>
                                            @item.NumberOfVisitors
                                        </td>
                                        <td>
                                            @item.TotalAmount.ToString("N0") VNĐ
                                        </td>
                                        <td>
                                            <span class="badge @(item.Status == "Pending" ? "bg-warning text-dark" :
                                                                                                                  item.Status == "Confirmed" ? "bg-success" :
                                                                                                                  "bg-danger")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    @(string.IsNullOrEmpty(item.SpecialNotes) ? "Không có" : item.SpecialNotes)
                                </td>
                                <td>
                                    @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>